<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#015595">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:paddingTop="5dp"
        android:src="@drawable/message"
        android:id="@+id/iv_messageList"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_toRightOf="@+id/iv_messageList"
        android:layout_toEndOf="@+id/iv_messageList"
        android:text="消息列表"
        android:textSize="28dp"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/menu"
        android:paddingTop="5dp"
        android:id="@+id/iv_message_list_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:paddingTop="20dp"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/head"
        android:id="@+id/iv_message_list_head"
        android:layout_below="@+id/iv_message_list_menu"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/iv_message_list_head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view3" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_message_list"
        android:layout_below="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标为未读"
        android:id="@+id/bt_not_read"
        android:layout_below="@+id/lv_message_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除记录"
        android:id="@+id/bt_delete_record"
        android:layout_below="@+id/lv_message_list"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
